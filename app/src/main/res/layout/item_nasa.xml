<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:cardMaxElevation="6dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/neo_reference_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="neo_reference_id"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/estimated_diameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Estimated Diameter"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kilometers_estimated_diameter_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="kilometers"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/kilometers_estimated_diameter_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="kilometers"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/meters_estimated_diameter_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Meters"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/meters_estimated_diameter_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Meters"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/miles_estimated_diameter_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Miles"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/miles_estimated_diameter_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Miles"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/feet_estimated_diameter_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="feet"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/feet_estimated_diameter_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="feet"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Close Approach Data"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/close_approach_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="feet"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/close_approach_date_full"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="feet"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/epoch_date_close_approach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="feet"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Relative Velocity"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kilometers_per_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="feet"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/kilometers_per_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="feet"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/miles_per_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="feet"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.cardview.widget.CardView>